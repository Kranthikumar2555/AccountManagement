@model AccountManagement.DataAccess.EntityModels.Employee
@{
    ViewData["Title"] = "Employee Dashboard";
    ViewData["Role"] = "Employee";

}

@{
    Layout = "_Layout";
}

<div class="dashboard-table">
    <h2>Welcome, @Model.Name!</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Job Title</th>
                <th>Salary</th>
                <th>Remote Work Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.Name</td>
                <td>@Model.Department</td>
                <td>@Model.JobTitle</td>
                <td>@Model.Salary</td>
                <td>@Model.RemoteWorkStatus</td>
                <td>
                    <a href="@Url.Action("CreateOrUpdate", "Employee", new { id = Model.EmployeeId })" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
